root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
insert_final_newline = true
max_line = 80

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 2

[{Makefile,Makefile.*}]
indent_style = tab
indent_size = 2
